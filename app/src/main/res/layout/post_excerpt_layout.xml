<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingTop="18dp"
        android:paddingBottom="18dp" android:paddingLeft="10dp"
        android:paddingRight="10dp">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/lay1" android:orientation="vertical">
        <TextView
                android:text="@{viewModel.category}"
                android:background="@color/row_post_background"
                android:textColor="@color/row_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp"
                android:id="@+id/row_post_category_name"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" android:paddingTop="4dp" android:paddingBottom="4dp"
                android:textAllCaps="true" tools:text="placeholder"/>
        <ImageView
                android:id="@+id/border1"
                android:background="@color/row_post_background"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/nt_border"
                android:layerType="software"
                app:layout_constraintTop_toBottomOf="@+id/row_post_category_name" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintTop_toBottomOf="@+id/lay1">

        <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/row_post_title"
                  android:textColor="@color/row_post_title"
                  android:text="Tytuł"
                  android:singleLine="false"
                  android:background="@color/row_post_background"
                  android:fontFamily="@font/museo"
                  android:layerType="software"
                    android:textSize="29sp"
                  android:paddingTop="7dp"
                  android:paddingBottom="7dp"
                  android:paddingRight="7dp"
                  android:paddingLeft="7dp"
                  tools:layout_editor_absoluteX="10dp" android:textStyle="bold" />
        <ImageView
                android:id="@+id/border2"
                android:background="@color/row_post_background"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/nt_border"
                android:layerType="software"
                app:layout_constraintTop_toBottomOf="@+id/row_post_title" />

        <TextView
                android:text="TextView"
                android:background="@color/row_post_background"
                android:textColor="@color/row_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:id="@+id/row_post_date_and_author"
                app:layout_constraintTop_toBottomOf="@+id/border2"
                android:textAllCaps="true" />
        <ImageView
                android:id="@+id/border3"
                android:background="@color/row_post_background"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/nt_border"
                android:layerType="software"
                app:layout_constraintTop_toBottomOf="@+id/row_post_background" />
        <TextView
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed dictum ex lectus, vel convallis libero egestas quis. Quisque libero elit, tempor sed fermentum at, vehicula eget lacus. Proin sed viverra tortor, ut feugiat quam. Etiam vel quam in ante luctus scelerisque. Donec consequat vehicula ante, in semper lacus posuere sed."
                android:background="@color/row_post_background"
                android:textColor="@color/row_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_post_excerpt"
                app:layout_constraintTop_toBottomOf="@+id/border3"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"/>
        <TextView
                android:background="@color/row_post_background"
                android:textColor="@color/row_post_title"
                android:text="Czytaj więcej"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row_post_read_more"
                app:layout_constraintTop_toBottomOf="@+id/row_post_excerpt"
                android:textSize="23dp" android:textAlignment="textEnd" android:paddingTop="7dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp" android:paddingBottom="10dp" android:textStyle="bold"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
