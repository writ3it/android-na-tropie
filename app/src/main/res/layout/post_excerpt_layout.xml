<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingTop="18dp"
        android:paddingBottom="18dp" android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <TextView
            android:text="@{viewModel.category}"
            android:background="@color/row_post_background"
            android:textColor="@color/row_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/row_post_category_name" android:paddingLeft="15dp"
            android:paddingRight="15dp" android:paddingTop="4dp" android:paddingBottom="4dp"
            android:textAllCaps="true"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="0.5sp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="@android:color/white"
            tools:layout_editor_absoluteX="-16dp"
            app:layout_constraintTop_toBottomOf="@+id/row_post_category_name"/>



    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/row_post_title"
              android:textColor="@color/row_post_title" android:text="@{viewModel.title}"
              android:singleLine="false"
              android:background="@color/row_post_background"
              app:layout_constraintTop_toBottomOf="@+id/separator" android:textSize="27dp" android:paddingTop="7dp"
              android:paddingBottom="7dp" android:paddingRight="7dp" android:paddingLeft="7dp"/>

    <TextView
            android:text="TextView"
            android:background="@color/row_post_background"
            android:textColor="@color/row_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_post_date_and_author"
            app:layout_constraintTop_toBottomOf="@+id/row_post_title"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:id="@+id/separator3"
            android:visibility="visible"
            android:background="@android:color/white"
            tools:layout_editor_absoluteX="-16dp"
            app:layout_constraintTop_toBottomOf="@+id/row_post_date_and_author"/>
    <TextView
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed dictum ex lectus, vel convallis libero egestas quis. Quisque libero elit, tempor sed fermentum at, vehicula eget lacus. Proin sed viverra tortor, ut feugiat quam. Etiam vel quam in ante luctus scelerisque. Donec consequat vehicula ante, in semper lacus posuere sed."
            android:background="@color/row_post_background"
            android:textColor="@color/row_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_post_excerpt" app:layout_constraintTop_toBottomOf="@+id/separator3"
            android:paddingLeft="7dp" android:paddingTop="7dp" android:paddingRight="7dp"
            android:paddingBottom="7dp"/>
    <TextView
            android:background="@color/row_post_background"
            android:textColor="@color/row_post_title"
            android:text="Czytaj wiÄ™cej"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/row_post_read_more"
            app:layout_constraintTop_toBottomOf="@+id/row_post_excerpt"
            android:textSize="23dp" android:textAlignment="textEnd" android:paddingTop="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp" android:paddingBottom="10dp"/>

</android.support.constraint.ConstraintLayout>
